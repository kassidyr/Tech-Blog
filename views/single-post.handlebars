<article class="post">
    <div class="title">
        <a href="{{post_content}}" target="_blank">{{title}}</a>
        <p>{{post_content}}</p>
    </div>
    <div class="meta">
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
    </div>
</article>
{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>
{{/if}}

<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}